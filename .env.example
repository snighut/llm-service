# Example environment variables
LLM_NODE_URL=http://localhost:5000/llm

# ================================
# Agent Configuration
# ================================

# Design Service API
# URL to the design-service for storing and retrieving designs
DESIGN_SERVICE_URL=http://localhost:3001
# In Kubernetes, use: http://design-service:3000

# ================================
# Ollama Configuration
# ================================

# Ollama server URL (your Ubuntu server)
OLLAMA_HOST=http://localhost:11434

# Model to use for agent reasoning
OLLAMA_MODEL=mistral-nemo:latest

# LLM Provider Configuration
# Options: 'ollama' or 'openai'
LLM_PROVIDER=openai

# ================================
# OpenAI Configuration (only needed if LLM_PROVIDER=openai)
# ================================
OPENAI_API_KEY=abcd
OPENAI_MODEL=gpt-4o

# ================================
# Qdrant Configuration
# ================================
QDRANT_URL=http://localhost:6333

# ================================
# Database Connection Configuration
# ================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=design_service_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/design_service_dev

# ================================
# JWT Configuration
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# ================================
# Supabase Authentication
# ================================

# Get these from your Supabase project dashboard
# JWT audience (usually 'authenticated')
SUPABASE_JWT_AUDIENCE=authenticated

# JWT issuer URL (your Supabase project auth URL)
SUPABASE_JWT_ISSUER=https://your-project-id.supabase.co/auth/v1

# ================================
# Agent Behavior Configuration (Optional)
# ================================

# Maximum number of reasoning iterations before stopping
# AGENT_MAX_ITERATIONS=15

# Timeout for agent execution in milliseconds
# AGENT_TIMEOUT_MS=60000

# ================================
# Cloudflare R2 Storage Configuration (for pdf uploads through API and pdf retrival through workers)
# ================================
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_BUCKET_NAME=your-bucket-name

# ================================
# REDIS Configuration
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ================================
# WORKER vs API SERVER Configuration
# ================================
WORKER_ONLY=false